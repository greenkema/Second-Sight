{
  "datacenter": "dc1",
  "data_dir": "/consul/data",
  "log_level": "INFO",
  "node_name": "consul-server3",
  "server": true,
  "ui_config": {
    "enabled": false
  },
  "bootstrap_expect": 3,
  "retry_join": ["consul-server1", "consul-server2"],
  "client_addr": "0.0.0.0",
  "bind_addr": "{{ GetInterfaceIP \"eth0\" }}",
  "telemetry": {
    "disable_hostname": true,
    "prometheus_retention_time": "30s"
  },
  "performance": {
    "raft_multiplier": 1
  },
  "connect": {
    "enabled": true
  },
  "acl": {
    "enabled": false,
    "default_policy": "allow",
    "enable_token_persistence": true
  },
  "service": {
    "name": "consul",
    "tags": ["server"],
    "check": {
      "id": "consul-server-health",
      "name": "Consul Server Health",
      "tcp": "localhost:8300",
      "interval": "30s",
      "timeout": "5s"
    }
  }
}